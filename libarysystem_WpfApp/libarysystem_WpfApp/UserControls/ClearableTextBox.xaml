<UserControl x:Class="libarysystem_WpfApp.UserControls.ClearableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:libarysystem_WpfApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="230">
    
    <Border CornerRadius="20" Background="White">
        
        <Grid Background="Transparent">
            
        <TextBox x:Name="username" VerticalContentAlignment="Center" BorderThickness="0"
                 FontSize="16" FontWeight="Light" Background="Transparent" TextChanged="username_TextChanged"/>
            
        <TextBlock x:Name="textHolder" Text="{Binding BoundText}" VerticalAlignment="Center"
                   FontSize="16" FontWeight="Light" Foreground="DarkGray" Margin="5,0,0,0" Panel.ZIndex="-1" />
            
        <Button x:Name="clrButton" Width="30" Content="X" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right"
                Click="btnClear"/>
            
    </Grid>
        
    </Border>
    
</UserControl>
