<Window x:Class="libarysystem_WpfApp.StaffVerificationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Verification" Height="498" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Staff Verification" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>
            <StackPanel>
                <TextBlock Text="Staff ID:" FontSize="16"/>
                <TextBox x:Name="txtStaffID" FontSize="16" BorderThickness="1" Padding="5" Margin="0 0 0 10"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Password:" FontSize="16"/>
                <PasswordBox x:Name="txtPassword" FontSize="16" BorderThickness="1" Padding="5" Margin="0 0 0 10"/>
            </StackPanel>
            <Button Content="Proceed" FontSize="16" FontWeight="Bold" Background="#9C6644" Foreground="White" Padding="10" Click="ProceedButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
