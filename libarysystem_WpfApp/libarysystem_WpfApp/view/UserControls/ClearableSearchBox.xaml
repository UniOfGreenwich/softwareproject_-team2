<UserControl x:Class="libarysystem_WpfApp.view.UserControls.ClearableSearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:libarysystem_WpfApp.view.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    
    <Grid Background="White">
        <TextBox x:Name="searchBook" VerticalContentAlignment="Center"
FontSize="16" FontWeight="Light" Background="Transparent" TextChanged="searchBook_TextChanged"/>
        <TextBlock x:Name="textHolder" Text="{Binding BoundText}" VerticalAlignment="Center"
  FontSize="16" FontWeight="Light" Foreground="LightGray" Margin="5,0,0,0" Panel.ZIndex="-1" />
        <Button x:Name="clrButton" Width="30" Content="X" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right"
       Click="btnClear"/>
    </Grid>
</UserControl>
