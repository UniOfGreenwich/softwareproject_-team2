<Window x:Class="libarysystem_WpfApp.CheckStudentBalance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:libarysystem_WpfApp"
        mc:Ignorable="d"
        Background="#F5EBE0"
        Foreground="#DDB892"
        Title="Student Balance" Height="640" Width="360">
	<Grid>
		<TextBlock Text="Check Student Balance" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,50" RenderTransformOrigin="0.46,0.501"></TextBlock>
		<StackPanel HorizontalAlignment="Center">
            <Label Content="Enter Student ID:" Margin="10,120,0,0" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>
		<Border BorderBrush="Black" BorderThickness="1" Padding="0" Width="100" >
			<TextBox Name="txtStudentID" Width="100"  HorizontalAlignment="Left"/>
		</Border>
            <Button x:Name="btnVerifyStudent" Padding="10" Content="Verify Student Balance" HorizontalAlignment="Center" Margin="0,40" FontSize="17" FontWeight="Bold" Click="btnVerifyStudent_Click"></Button>
			
		</StackPanel>
	</Grid>
</Window>